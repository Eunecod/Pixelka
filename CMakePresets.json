{
  "version": 3,
  "configurePresets": [
    {
      "name": "avr-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Generic",
        "CMAKE_SYSTEM_PROCESSOR": "AVR",
        "CMAKE_C_COMPILER": "avr-gcc.exe",
        "CMAKE_CXX_COMPILER": "avr-g++.exe",
        "AVRDUDE_PORT": "COM6",
        "AVRDUDE_BAUD": "57600",
        "AVRDUDE_CONTROLER": "m328p",
        "AVRDUDE_LOADER": "arduino"
      }
    },
    {
      "name": "Debug",
      "displayName": "x64 Debug",
      "inherits": "avr-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS_DEBUG": "-O0 -g",
        "CMAKE_CXX_FLAGS_DEBUG": "-O0 -g"
      }
    },
    {
      "name": "Release",
      "displayName": "x64 Release",
      "inherits": "avr-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_FLAGS_RELEASE": "-Os -DNDEBUG",
        "CMAKE_CXX_FLAGS_RELEASE": "-Os -DNDEBUG"
      }
    }
  ]
}
