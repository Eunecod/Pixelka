{
  "version": 3,
  "configurePresets": [
    {
      "name": "avr-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "CMAKE_C_COMPILER":       "avr-gcc.exe",
        "CMAKE_CXX_COMPILER":     "avr-g++.exe",
        "AVRDUDE_PORT":           "COM5",
        "AVRDUDE_BAUD":           "57600",
        "AVRDUDE_CONTROLER":      "m328p",
        "AVRDUDE_LOADER":         "arduino"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Debug",
      "displayName": "x64 Debug",
      "inherits": "avr-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS": "-Os -Wall -Wextra"
      }
    },
    {
      "name": "Release",
      "displayName": "x64 Release",
      "inherits": "avr-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_FLAGS": "-Os -Wall -Wextra"
      }
    }
  ]
}
