{
  "version": 3,
  "configurePresets": [
    {
      "name": "avr-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Generic",
        "CMAKE_SYSTEM_PROCESSOR": "AVR",
        "CMAKE_C_COMPILER": "avr-gcc.exe",
        "CMAKE_CXX_COMPILER": "avr-g++.exe"
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug build & upload",
      "inherits": "avr-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "Release",
      "displayName": "Release build & upload",
      "inherits": "avr-base",
      "hidden": false,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
